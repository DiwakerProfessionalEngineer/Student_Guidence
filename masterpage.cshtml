<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-2.1.0.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <style>
        #toprow {
            min-height: 40px;
            background-color: teal;
        }

        #menu {
            color: teal;
            font-size: 18px;
            font-family: 'Times New Roman';
        }

            #menu:hover {
                border-bottom: 9px solid teal;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12" id="toprow" style="background-color:teal">
                <div class="col-sm-3">
                    <span class="fa fa-phone" style="position:relative;" id="phone"></span>&nbsp;&nbsp;
                    <span id="num" style="position:relative;top:12px;">(+91)9336000490</span>
                </div>

                <div class="col-sm-3">
                    <span class="fa fa-envelope" style="position:relative;top:12px"></span>&nbsp;&nbsp;
                    <span id="num" style="color:white;position:relative;top:15px;">smritirani@gmail.com</span>
                </div>
                <div class="col-sm-3">
                    <span class="glyphicon glyphicon-time" style="color:white;position:relative;top:20px"></span>
                    <span style="color:white;position:relative;top:20px">@DateTime.Now.ToString()</span>
                </div>
            </div>
        </div>
        <div class="row">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="/Home" id="menu">Home</a></li>
                             <li><a href="/Home/AboutUs" id="menu">AboutUs</a></li>
                            <li><a href="/Home/Registration" id="menu">Registation</a></li>
                          <li><a href="/Home/Login" id="menu">Login</a></li>
                            <li><a href="/Home/Notification" id="menu">Notification</a></li>
                             <li><a href="/Home/Enquiry" id="menu">Enquiry</a></li>
                            <li><a href="/Home/feedback" id="menu">feedback</a></li>
                        </ul>


                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div>
    </div>
    <div style="height:400px">
        @RenderBody()
    </div>
    <div class="row">
        <div class="col-sm-12" style="min-height:20px;background-color:black;">
            <h3 style="text-align:center;color:white;font-size:18px;font-family:'Times New Roman'">
                Designed & Developed By :&copy; API
            </h3>
        </div>
    </div>
    <h1>Footer</h1>
</body>
</html>


